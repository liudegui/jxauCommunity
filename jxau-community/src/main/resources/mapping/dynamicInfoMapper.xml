<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liudegui.dao.IResourcesDao">

    <resultMap id="BaseResultMap" type="com.liudegui.entity.DynamicInfo" >
        <result column="stud_name" property="studName" jdbcType="VARCHAR" />
        <result column="post_id" property="postID" jdbcType="VARCHAR" />
        <result column="post_date" property="PostDate" jdbcType="VARCHAR"/>
        <result column="post_content" property="PostContent" jdbcType="INTEGER" />
        <result column="comm_id" property="commID" jdbcType="VARCHAR" />
        <result column="comm_content" property="commContent" jdbcType="VARCHAR" />
        <result column="comm_date" property="commDate" />
    </resultMap>

    <select id="selAllResources" resultMap="BaseResultMap">
        select
            a.stud_name,a.post_id,post_date,a.post_content,b.comm_id,b.comm_content,b.comm_date
        from
            post a
        left join
            comment b
        on
            a.post_id=b.post_id
        where
            order by asc
    </select>

</mapper>